%header.navbar.navbar.navbar-inverse
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Erica's List", '/', id: "logo"
      .nav-collapse
        %ul.nav
          %li= link_to "About",   '/about'
          %li= link_to "Contact", '/contact'
          - if current_user
            %li= link_to "Users", '#'
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", 'edit_user_path(current_user)'
                %li.divider
                %li
                %li= link_to "Log out", session_path("current"), method: "delete"
          - else
            %li= link_to "Log in", new_session_path
            %li= link_to "Sign up", new_user_path
